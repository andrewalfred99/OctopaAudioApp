@model ChangePasswordViewModel
@{

    ViewBag.Title = "User Login";

}

<head>

    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">

    <link href="~/assets/vendor/nprogress/nprogress.css" rel="stylesheet">

    <link href="~/assets/vendors/animate.css/animate.min.css" rel="stylesheet">

    <link href="~/css/custom.css" rel="stylesheet" />

</head>

<html>

<body class="login">

    <div>

        <a class="hiddenanchor" id="signup"></a>

        <a class="hiddenanchor" id="signin"></a>



        <div class="login_wrapper">

            <div class="animate form login_form">

                <section class="login_content">

                    <form method="post">

                        <div style="text-align:center">

                            <img src="~/Logo.png" style="width:100%;height:200px;" />

                        </div>



                        <div>

                            <label asp-for="CurrentPassword"></label>
                            <input asp-for="CurrentPassword" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>

                        </div>

                        <div>

                            <label asp-for="NewPassword"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>

                        </div>
                        <div>

                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                        </div>

                        <div>
                            <button type="submit" class="btn btn-primary">Update</button>

                        </div>



                        <div class="clearfix"></div>



                        <div class="separator">



                            <div class="clearfix"></div>

                            <br />

                            <div>

                                @*<h1><i class="fa fa-paw"></i> Audio Technology </h1>*@

                                <p>© @Convert.ToDateTime(DateTime.Now).ToString("yyyy") All Rights Reserved</p>

                            </div>

                        </div>

                    </form>

                </section>

            </div>

        </div>

    </div>

</body>

</html>